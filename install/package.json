{
  "name": "n8n-electron-wrapper",
  "version": "1.0.0",
  "description": "A secure and efficient Electron wrapper for n8n",
  "main": "src/core/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build:vite": "vite build --config vite.main.config.ts && vite build --config vite.renderer.config.ts",
    "make": "npm run build:vite && electron-forge make",
    "dev": "nvm use 18.18.0 && npm install && npm run dev:watch",
    "dev:watch": "electron-forge start",
    "test:all": "jest"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "jest": "^29.7.0",
    "vite": "^5.1.3"
  },
  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "n8n": "^1.28.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "n8n"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        }
      ]
    }
  }
}
