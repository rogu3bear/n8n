{
  "name": "n8n-electron-wrapper",
  "version": "1.0.0",
  "description": "A secure and efficient Electron wrapper for n8n",
  "main": "src/core/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev": "electron-forge start",
    "dev:watch": "electron-forge start --watch",
    "dev:webpack": "webpack --watch",
    "dev:all": "concurrently \"npm run dev:watch\" \"npm run dev:webpack\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security-audit": "npm audit",
    "setup:python": "python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "clean": "rimraf out node_modules .venv"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.4.19",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vue": "^3.4.19",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "n8n": "^1.28.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "n8n"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        },
        {
          "name": "@electron-forge/plugin-vite",
          "config": {
            "build": [
              {
                "entry": "src/core/main.js",
                "config": "vite.main.config.ts"
              },
              {
                "entry": "src/renderer/index.html",
                "config": "vite.renderer.config.ts"
              }
            ]
          }
        }
      ]
    }
  }
}
